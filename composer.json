{
    "name": "hexlet/code",
    "description": "Difference Finder is second project from Hexlet by Karakin Alexander!",
    "license": "MIT",
    "bin" : [
        "bin/gendiff"
    ],
    "autoload": {
        "psr-4": {
            "Differ\\GenDiff\\": "src",
            "Differ\\tests\\": "tests"
        },
        "files": [
            "src/Differ.php",
            "src/Parsers.php",
            "src/Formatters.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Json.php",
            "src/TreeBuider.php"
        ]
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12",
        "phpunit": "phpunit",
        "test": "phpunit tests"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^9.5"
    },
    "require": {
        "docopt/docopt": "^1.0",
        "ext-json": "*",
        "funct/funct": "^1.5",
        "symfony/yaml": "^5.2"
    },
    "authors": [
        {
            "name": "Alex Karakin",
            "email": "karakin.alexandr@gmail.com"
        }
    ]
}
